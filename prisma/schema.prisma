generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
}

model User {
  id       String  @id @default(uuid())  // UUID Ã© melhor para escalabilidade
  name     String
  email    String  @unique
  password String
  role     String
  createdAt DateTime @default(now())
}
